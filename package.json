{
  "name": "bureau-broersma-website",
  "version": "1.0.0",
  "description": "Modern website for Bureau Broersma - Dutch structural engineering consultancy",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
