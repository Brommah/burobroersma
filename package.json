    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.546.0",
    "next": "^14.0.0",
    "next-seo": "^6.4.0",
    "next-sitemap": "^4.2.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
